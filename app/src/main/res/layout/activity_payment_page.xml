<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lazeebear.parkhere.PaymentActivity"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="1">

    <TextView
        android:text="Amount to Pay: "
        android:textSize="25.0dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/amount_payment_page"
        android:layout_weight="0.1" />

    <Button
        android:id="@+id/launch_braintree_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Braintree"/>
    <Button
        android:id="@+id/pay_by_paypal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pay_by_paypal_label"/>
    <Button
        android:id="@+id/pay_by_credit_card_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pay_by_credit_card_label"/>

</LinearLayout>
